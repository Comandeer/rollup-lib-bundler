{
  "name": "@comandeer/rollup-lib-bundler",
  "version": "0.16.1",
  "description": "Simple library bundler",
  "main": "dist/rollup-lib-bundler.js",
  "module": "dist/rollup-lib-bundler.es2015.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": {
    "rlb": "bin/bundler"
  },
  "files": [
    "bin",
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "build": "rlb",
    "pretest": "npm run build",
    "test": "mlt",
    "version": "npm test && npm run build && git add -f dist/",
    "postversion": "git rm -r --cached dist/ && git commit -m \"chore(dist): clean after release [ci skip]\" && git push origin && git push origin --tags",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Comandeer/rollup-lib-bundler.git"
  },
  "keywords": [
    "rollup",
    "babel",
    "library-bundler",
    "bundler"
  ],
  "author": "Comandeer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Comandeer/rollup-lib-bundler/issues"
  },
  "homepage": "https://github.com/Comandeer/rollup-lib-bundler#readme",
  "commitplease": {
    "nohook": true,
    "style": "angular",
    "types": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "build",
      "ci",
      "chore",
      "revert"
    ],
    "scope": "\\S+.*"
  },
  "devDependencies": {
    "@comandeer/mocha-lib-tester": "^0.7.0",
    "@comandeer/rollup-lib-bundler": "^0.16.1",
    "commitplease": "^3.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.1",
    "mock-fs": "^5.1.4",
    "sourcemap-validator": "^2.1.0"
  },
  "dependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@comandeer/cli-spinner": "^0.3.2",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "console-control-strings": "^1.1.0",
    "globby": "^13.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  }
}
