{
  "name": "@comandeer/rollup-lib-bundler",
  "version": "0.20.0",
  "description": "Simple library bundler",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/rollup-lib-bundler.mjs"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": {
    "rlb": "./bin/rlb.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "build": "rlb",
    "lint": "eslint --ext .js,.cjs,.mjs,.ts,.cjs,.mts \"./src\" \"./tests\"",
    "pretest": "npm run lint && npm run build",
    "test": "c8 ava",
    "version": "npm test && npm run build && git add -f dist/",
    "postversion": "git rm -r --cached dist/ && git commit -m \"chore(dist): clean after release [ci skip]\" && git push origin && git push origin --tags",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Comandeer/rollup-lib-bundler.git"
  },
  "keywords": [
    "rollup",
    "babel",
    "library-bundler",
    "bundler"
  ],
  "author": "Comandeer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Comandeer/rollup-lib-bundler/issues"
  },
  "homepage": "https://github.com/Comandeer/rollup-lib-bundler#readme",
  "commitplease": {
    "nohook": true,
    "style": "angular",
    "types": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "build",
      "ci",
      "chore",
      "revert"
    ],
    "scope": "\\S+.*"
  },
  "devDependencies": {
    "@comandeer/eslint-config": "^0.10.0",
    "@comandeer/rollup-lib-bundler": "^0.18.0",
    "ava": "^5.1.1",
    "c8": "^7.12.0",
    "commitplease": "^3.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.33.0",
    "execa": "^7.0.0",
    "husky": "^8.0.3",
    "mock-fs": "^5.2.0",
    "sinon": "^15.0.1",
    "sourcemap-validator": "^2.1.0",
    "tempy": "^3.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-syntax-import-assertions": "^7.20.0",
    "@babel/plugin-transform-typescript": "^7.20.13",
    "@babel/preset-env": "^7.20.2",
    "@babel/types": "^7.20.7",
    "@comandeer/cli-spinner": "^0.3.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-terser": "^0.3.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@rollup/plugin-virtual": "^3.0.1",
    "console-control-strings": "^1.1.0",
    "globby": "^13.1.3",
    "pathe": "^1.1.0",
    "rimraf": "^4.0.7",
    "rollup": "^3.10.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  }
}
